<div class="addmealkit">
    <div class="addcontainer">
        <h1>Edit Meal Kit</h1>
        <form method="post" class="modcntn" action="/mealkits/edit/<%= formData._id %>" enctype="multipart/form-data">
            <div class="modentry">
                <label for="title" class="label">Title</label>
                <input type="text" id="title" name="title" class="input" value="<%= formData.title %>" required>
            </div>
            <div class="modentry">
                <label for="includes" class="label">Includes</label>
                <input type="text" id="includes" name="includes" class="input" value="<%= formData.includes %>" required>
            </div>
            <div class="modentry">
                <label for="description" class="label">Description</label>
                <textarea id="description" rows="4" cols="50" class="input" required><%= formData.description %></textarea>
            </div>
            <div class="modentry">
                <label for="category" class="label">Category</label>
                <input type="text" id="category" name="category" class="input" value="<%= formData.category %>" required>
            </div>
            <div class="modentry">
                <label for="price" class="label">Price</label>
                <input type="number" id="price" name="price" min="0.01" step="0.01" class="input" value="<%= formData.price %>" required>
            </div>
            <div class="modentry">
                <label for="cookTime" class="label">Cooking Time (min)</label>
                <input type="number" id="cookingTime" name="cookingTime" min="1" step="1" class="input" value="<%= formData.cookingTime %>" required>
            </div>
            <div class="modentry">
                <label for="servings" class="label">Servings</label>
                <input type="number" id="servings" name="servings" min="1" step="1" class="input" value="<%= formData.servings %>" required>
            </div>
            <div class="modentry">
                <label for="imageUrl" class="label">Image</label>
                <input type="file" id="imageUrl" name="imageUrl" accept=".jpg,.jpeg,.gif,.png" class="input">
            </div>
            <div class="modentry">
                <label for="featured" class="label">Featured</label>
                <input type="checkbox" id="featuredMealKit" name="featuredMealKit" class="input" <%= formData.featuredMealKit ? 'checked' : '' %>>
            </div>
            <div class="addlink">
                <button type="submit" class="addbtn">Save Changes</button>
            </div>
        </form>
    </div>
</div>